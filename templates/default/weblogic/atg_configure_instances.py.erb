connect('<%= node[:atg][:weblogic][:username] %>','<%= node[:atg][:weblogic][:password] %>','t3://<%= node[:atg][:weblogic][:domain_name] %>:<%= node[:atg][:weblogic][:port] %>')

edit()
startEdit()
cd('/JTA/<%= node[:atg][:weblogic][:domain_name] %>')
cmo.setTimeoutSeconds(250)
activate()

<% [:publishing, :production].each do |instance_name| %>

edit()
startEdit()
cd('/JDBCSystemResources/<%= node[:atg][instance_name][:db][:jdni_name] %>/JDBCResource/<%= node[:atg][instance_name][:db][:jdni_name] %>/JDBCConnectionPoolParams/<%= node[:atg][instance_name][:db][:jdni_name] %>')
cmo.setMaxCapacity(51)
activate()

edit()
startEdit()
cd('/Servers/<%= node[:atg][instance_name][:instance] %>/ServerStart/<%= node[:atg][instance_name][:instance] %>')
cmo.setJavaHome('<%= node[:weblogic][:bea_home] %>/jrockit')
cmo.setArguments('-jrockit -Xms1024m -Xmx1024m <%= node[:atg][instance_name][:jvm_attrs].join(' ') %>')
cmo.setClassPath('<%= node[:atg][:weblogic][:domain_path] %>/lib/protocol.jar:<%= node[:weblogic][:bea_home] %>/patch_wls1036/profiles/default/sys_manifest_classpath/weblogic_patch.jar:<%= node[:weblogic][:bea_home] %>/patch_ocp371/profiles/default/sys_manifest_classpath/weblogic_patch.jar:<%= node[:weblogic][:bea_home] %>/jrockit/lib/tools.jar:<%= node[:weblogic][:weblogic_home] %>/server/lib/weblogic_sp.jar:<%= node[:weblogic][:weblogic_home] %>/server/lib/weblogic.jar:<%= node[:weblogic][:bea_home] %>/modules/features/weblogic.server.modules_10.3.6.0.jar:<%= node[:weblogic][:weblogic_home] %>/server/lib/webservices.jar:<%= node[:weblogic][:bea_home] %>/modules/org.apache.ant_1.7.1/lib/ant-all.jar:<%= node[:weblogic][:bea_home] %>/modules/net.sf.antcontrib_1.1.0.0_1-0b2/lib/ant-contrib.jar:<%= node[:weblogic][:weblogic_home] %>/common/derby/lib/derbyclient.jar:<%= node[:weblogic][:weblogic_home] %>/server/lib/xqrl.jar:/u01/app/oracle/product/11.2.0/xe/jdbc/lib/ojdbc6_g.jar::<%= node[:atg][:weblogic][:domain_path] %>/lib/protocol.jar')
cmo.setBeaHome('<%= node[:weblogic][:bea_home] %>')
cmo.setSecurityPolicyFile('<%= node[:weblogic][:weblogic_home] %>/server/lib/weblogic.policy')
activate()

<% end %>

disconnect()
exit()
